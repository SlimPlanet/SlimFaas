{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "SlimFaasMcp.Services.ToolProxyService": "Debug",
      "SlimFaasMcp.Middleware.RequestLoggingMiddleware": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "Origins": [ "*" ],
    "Methods": [ "*" ],
    "Headers": [ "*" ],
    "Expose":  [ "WWW-Authenticate" ],
    "Credentials": false,
    "MaxAgeMinutes": 10
  },
  "OpenTelemetry": {
    "Enable": false,
    "Endpoint": "http://localhost:4317",
    "ServiceName": "SlimFaasMcp",
    "EnableConsoleExporter": false,
    "ExcludedUrls": ["/health"]
  }
}
