{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "SlimFaasMcp.Services.ToolProxyService": "Debug",
      "SlimFaasMcp.Middleware.RequestLoggingMiddleware": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "Origins": [  ],
    "Methods": [ "*" ],
    "Headers": [ "*" ],
    "Expose":  [ "WWW-Authenticate" ],
    "Credentials": true,
    "MaxAgeMinutes": 60
  },
  "OpenTelemetry": {
    "Enable": false,
    "Endpoint": "",
    "ServiceName": "",
    "EnableConsoleExporter": false,
    "ExcludedUrls": ["/health", "/metrics"]
  },
  "McpMetaHeaderMapping": {
     "authToken": "Authorization"
  }
}
